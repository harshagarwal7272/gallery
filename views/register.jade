extends layout

block content
	#register
		h1 Register      
			i.fa.fa-user-plus(aria-hidden='true')
		//p Please register using the form below
		ul.errors
			if errors
				each error,i in errors
					li.alert.alert-danger #{error.msg}
		form(method='post',action='/users/register',enctype='multipart/form-data')
			.form-group
				label Name
				input.form-control(name='name',type='text',value=name)
			.form-group
				label Email
				input.form-control(name='email',type='email',value=email)
			.form-group
				label Username
				input.form-control(name='username',type='text',value=username)
			.form-group
				label Password
				input.form-control(name='password',type='password',placeholder='A strong password is appreciated')
			.form-group
				label Confirm-password
				input.form-control(name='password2',type='password')
			.form-group
				label Profile image
				input.form-control(name='profileimage',type='file')
			input.btn.btn-danger(name='submit',type='submit',value='Register')
		br
a(href='/users/login') Already have an account?
