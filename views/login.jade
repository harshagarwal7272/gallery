extends layout

block content
	#login
		h1 Login
			i.fa.fa-sign-in(aria-hidden='true')
		form(method='post',action='/users/login')
			.form-group
				label Username
				input.form-control(name='username',type='text')
			.form-group
				label Password
				input.form-control(name='password',type='password')
			input.btn.btn-success(name='submit',type='submit',value='Login')
		br
		a(href='/users/register') Create an account?    
i.fa.fa-user-plus(aria-hidden='true')
